<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_profile"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="墨娜"
                    android:textSize="20dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/icon"/>
                <LinearLayout
                    android:id="@+id/ll_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_settings_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ffffff"
                        android:text="个人资料"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_navigate_next_black_24dp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的积分 220"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_below="@+id/ll_me"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff"
                    android:textSize="30dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/mall"
                    style="@style/dialog_blue_button"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/corner_bg_blue"
                    android:layout_marginRight="40dp"
                    android:visibility="visible"
                    android:text="积分商城" />

                <Button
                    android:id="@+id/detail"
                    style="@style/dialog_blue_button"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/corner_bg_blue"
                    android:text="积分明细" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:layout_margin="10dp"
                android:src="@drawable/img_wallet"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="邀请好友，积分免费得，点击进入活动详情>> "
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/red_btn_bg_pressed_color"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:id="@+id/iv_left"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_favorite_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点赞记录"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/iv_left"
                        android:layout_marginLeft="10dp"
                        android:textColor="#515151"/>

                    <ImageView
                        android:id="@+id/iv_right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="66次"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_right"
                        android:textColor="#434343"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_btn_bg_pressed_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:id="@+id/iv_left_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_free_breakfast_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="竞猜中"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/iv_left_3"
                        android:layout_marginLeft="10dp"
                        android:textColor="#515151"/>

                    <ImageView
                        android:id="@+id/iv_right_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_right_3"
                        android:textColor="#434343"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_btn_bg_pressed_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:id="@+id/iv_left_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_child_friendly_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换天气卡"
                        android:layout_toRightOf="@+id/iv_left_1"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:textColor="#515151"/>

                    <ImageView
                        android:id="@+id/iv_right_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="66张待兑换"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_right_1"
                        android:textColor="#434343"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_btn_bg_pressed_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <ImageView
                        android:id="@+id/iv_left_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_folder_special_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换记录"
                        android:layout_toRightOf="@+id/iv_left_2"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textSize="20dp"
                        android:textColor="#515151"/>

                    <ImageView
                        android:id="@+id/iv_right_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron_right_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看"
                        android:layout_centerVertical="true"
                        android:textSize="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_right_2"
                        android:textColor="#434343"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray_btn_bg_pressed_color"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </LinearLayout>
<!--            <ImageView-->
<!--                android:id="@+id/iv2"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:scaleType="fitStart"-->
<!--                android:src="@drawable/img_list"/>-->


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>