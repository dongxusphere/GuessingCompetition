<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading"
    android:layout_width="@dimen/alert_width"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/corner_bg"
    android:padding="10dp">

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#575757"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="已投入晴天卡 x1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_wb_sunny_yellow_30dp"
            android:layout_margin="10dp"
            />
        <ImageView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/ic_flash_on_black_30dp"
            android:padding="5dp"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center"
            android:scaleType="fitStart"
            android:padding="5dp"
            android:src="@drawable/ic_wb_cloudy_blue_30dp"
            android:layout_margin="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="晴天卡"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="雨天卡"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="多云卡"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/content_text"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#797979"
        android:visibility="gone" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/cancel"
            style="@style/dialog_blue_button"
            android:background="@drawable/corner_bg_gray"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:text="取消" />

        <Button
            android:id="@+id/ok"
            style="@style/dialog_blue_button"
            android:background="@drawable/corner_bg_yellow"
            android:text="确认" />
    </LinearLayout>
    <TextView
        android:id="@+id/weather_card"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="使用天气卡"
        android:textSize="20dp"
        android:textColor="@color/yellow"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>